<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to SpaceCamp</h1>
            <p>View all of the various space pictures!git Feel free to make an account and join us!</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add a new SpaceCamp</a>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our most popular space pictures </h3>
        </div>
    </div>

    <div class="row text-center" style="display:flex; flex-wrap:wrap">
        <% campgrounds.forEach(function (camp) { %>
            <div class="col-md-3 col-sm-6"> 
                <div class="thumbnail">
                    <img src="<%= camp.image %>" alt=""> 
                    <div class="caption">
                        <h4> <%= camp.name %> </h4>
                    </div>   
                    <p>
                        <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
                    </p>          
                </div>
            </div>
        <% }) %>  
    </div>

    <% include ../partials/footer %>
</div>